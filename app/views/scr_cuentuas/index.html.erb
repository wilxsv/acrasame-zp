<div class="module">
 <div class="module-head"><h3>Catalogo de cuentas contables</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
     <th>Codigo</th>
     <th>Nombre de cuenta</th>
     <th>Debe</th>
     <th>Haber</th>
     <th>Total</th>
     <th>Cuentadescripcion</th>
     <th colspan="3">Operaciones</th>
   </tr>
  </thead>
  <tbody>
    <% @scr_cuentuas.each do |scr_cuentua| %>
      <tr>
        <td><%= scr_cuentua.cuentaCodigo %></td>
        <td><%= scr_cuentua.cuentaNombre %></td>
        <td><%= scr_cuentua.cuentaDebe %></td>
        <td><%= scr_cuentua.cuentaHaber %></td>
        <td><%= scr_cuentua.cuentaDebe - scr_cuentua.cuentaHaber %></td>
        <td><%= scr_cuentua.cuentaDescripcion %></td>
        <td><%= link_to ' Ver ', scr_cuentua %></td>
        <td><%= link_to ' Editar ', edit_scr_cuentua_path(scr_cuentua) %></td>
        <td><%= link_to ' Eliminar ', scr_cuentua, method: :delete, data: { confirm: 'Confirma la operaciÃ³n ?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
     <th>Codigo</th>
     <th>Nombre de cuenta</th>
     <th>Debe</th>
     <th>Haber</th>
     <th>Total</th>
     <th>Cuentadescripcion</th>
     <th colspan="3">Operaciones</th>
   </tr>
  </tfoot>
  </table>
 </div>
 <br>
</div>

<br>

<%= link_to 'Nueva cuenta', new_scr_cuentua_path, class:"btn btn-mini btn-inverse" %>
