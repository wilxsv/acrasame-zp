<div class="module">
 <div class="module-head"><h3>Listado de cloraciones</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Gramos</th>
      <th>Localidad</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @scr_cloracions.each do |scr_cloracion| %>
      <tr>
        <td><%= scr_cloracion.fecha %></td>
        <td><%= scr_cloracion.hora.strftime("%I:%M") %></td>
        <td><%= scr_cloracion.gramos %></td>
        <% c = ScrLocalidad.find(scr_cloracion.localidad_id) %>
        <td><%= c.localidad_nombre %></td>
        <td><%= scr_cloracion.observacion %></td>
        <td><%= link_to 'Ver', scr_cloracion %></td>
        <td><%= link_to 'Editar', edit_scr_cloracion_path(scr_cloracion) %></td>
        <td><%= link_to 'Eliminar', scr_cloracion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
   <tfoot>
    <tr>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Gramos</th>
      <th>Localidad</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </tfoot>
</table>

<br>

<%= link_to 'Nueva Cloracion', new_scr_cloracion_path, class:"btn btn-mini btn-inverse" %>
