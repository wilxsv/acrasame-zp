<div class="module">
 <div class="module-head"><h3>Listado de categorias para actividad</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
      <th>Nombre de categoria</th>
      <th>Descripción</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </thead>
  <tbody>
    <% @scr_cat_actividads.each do |scr_cat_actividad| %>
      <tr>
        <td><%= scr_cat_actividad.cActividadNombre %></td>
        <td><%= scr_cat_actividad.catActividadDescripcion %></td>
        <td><%= link_to ' Ver ', scr_cat_actividad, class:"btn btn-mini btn-info" %></td>
        <td><%= link_to ' Editar ', edit_scr_cat_actividad_path(scr_cat_actividad), class:"btn btn-mini btn-info" %></td>
        <td><%= link_to ' Eliminar ', scr_cat_actividad, method: :delete, data: { confirm: 'Confirma la operación ?' }, class:"btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
   <tfoot>
    <tr>
      <th>Nombre de categoria</th>
      <th>Descripción</th>
      <th colspan="3">Operaciones</th>
    </tr>
   </tfoot>
  </table>
 </div>
 <br>
</div>
<%= link_to 'Nueva categoria', new_scr_cat_actividad_path, class:"btn btn-mini btn-inverse" %>
<%= render :partial => '/layouts/main/tablas' %>
