<div class="module">
 <div class="module-head"><h3>Listado de organizaciones</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @scr_organizacions.each do |scr_organizacion| %>
      <tr>
        <td><%= scr_organizacion.organizacionNombre %></td>
        <td><%= scr_organizacion.organizacionDescripcion %></td>
        <td><%= link_to ' Ver ', scr_organizacion, class:"btn btn-mini btn-info" %></td>
        <td><%= link_to ' Editar ', edit_scr_organizacion_path(scr_organizacion), class:"btn btn-mini btn-info" %></td>
        <td><%= link_to ' Eliminar ', scr_organizacion, method: :delete, data: { confirm: 'Confirma la operación?' }, class:"btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
   </tbody>
   <tfoot>
    <tr>
     <th>Nombre</th>
     <th>Descripcion</th>
     <th colspan="3"></th>
    </tr>
   </tfoot>
  </table>
 </div>
 <br>
</div>
<%= link_to 'Nueva organización ', new_scr_organizacion_path, class:"btn btn-mini btn-inverse" %>
<%= render :partial => '/layouts/main/tablas' %>
