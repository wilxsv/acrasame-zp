<h1>Listado de localidades</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Localidad</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @scr_localidads.each do |scr_localidad| %>
      <tr>
        <td><%= scr_localidad.localidad_nombre %></td>
        <td><%= scr_localidad.localidad_descripcion %></td>
        <td><%= scr_localidad.localidad_id %></td>
        <td><%= scr_localidad.localidad_lat %></td>
        <td><%= scr_localidad.localidad_lon %></td>
        <td><%= link_to ' Ver ', scr_localidad %></td>
        <td><%= link_to ' Editar ', edit_scr_localidad_path(scr_localidad) %></td>
        <td><%= link_to ' Eliminar ', scr_localidad, method: :delete, data: { confirm: 'Confirma la operaciÃ³n?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

