<div class="module">
 <div class="module-head"><h3>Listado de localidades</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Pertenece a</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </thead>
  <tbody>
    <% @scr_localidads.each do |scr_localidad| %>
      <tr>
        <td><%= scr_localidad.localidad_nombre %></td>
        <td><%= scr_localidad.localidad_descripcion %></td>
        <td>
         <% if scr_localidad.localidad_id %>
          <% c = ScrLocalidad.find(scr_localidad.localidad_id) %>
          <%= c.localidad_nombre %>
         <% end %>
        </td>
        <td><%= scr_localidad.localidad_lat %></td>
        <td><%= scr_localidad.localidad_lon %></td>
        <td><%= link_to ' Ver ', scr_localidad, class:"btn btn-mini btn-info" %></td>
        <td><%= link_to ' Editar ', edit_scr_localidad_path(scr_localidad), class:"btn btn-mini btn-info" %></td>
        <td><%= link_to ' Eliminar ', scr_localidad, method: :delete, data: { confirm: 'Confirma la operaciÃ³n?' }, class:"btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
   <tfoot>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Pertenece a</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th colspan="3">Operaciones</th>
    </tr>
   </tfoot>
  </table>
 </div>
 <br>
</div>
<%= link_to 'Nueva localidad', new_scr_localidad_path, class:"btn btn-mini btn-inverse" %>
