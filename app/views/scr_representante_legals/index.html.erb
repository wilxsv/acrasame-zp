<div class="module">
 <div class="module-head"><h3>Listado de representantes legales</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
  <thead>
    <tr>
      <th>Registro</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Telefono movil</th>
      <th>Correo</th>
      <th>Categoria</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </thead>
  <tbody>
    <% @scr_representante_legals.each do |scr_representante_legal| %>
      <tr>
        <td><%= scr_representante_legal.rLegalRegistro %></td>
        <td><%= scr_representante_legal.rLegalNombre %></td>
        <td><%= scr_representante_legal.rLegalApellido %></td>
        <td><%= scr_representante_legal.rLegalTelefono %></td>
        <td><%= scr_representante_legal.rLegalCelular %></td>
        <td><%= scr_representante_legal.rLegalemail %></td>
        <td><%= scr_representante_legal.cat_rep_legal_id %></td>
        <td><%= link_to 'Ver', scr_representante_legal %></td>
        <td><%= link_to 'Editar', edit_scr_representante_legal_path(scr_representante_legal) %></td>
        <td><%= link_to 'Eliminar', scr_representante_legal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Registro</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Telefono movil</th>
      <th>Direccion</th>
      <th>Correo</th>
      <th>Categoria</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </tfoot>
</table>

<%= render :partial => '/layouts/main/tablas' %>
<br>
<%= link_to 'Agregar Representante Legal', new_scr_representante_legal_path, class:"btn btn-inverse" %>
