<div class="module">
 <div class="module-head"><h3>Listado de cargos</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
     <th>Nombre de cargo</th>
     <th>Descripción</th>
     <th>Salario</th>
     <th colspan="3">Operaciones</th>
   </tr>
  </thead>
  <tbody>
    <% @scr_cargos.each do |scr_cargo| %>
      <tr>
        <td><%= scr_cargo.cargoNombre %></td>
        <td><%= scr_cargo.cargoDescripcion %></td>
        <td><%= scr_cargo.cargoSalario %></td>
        <td><%= link_to ' Ver ', scr_cargo, class:"btn btn-mini btn-info" %></td>
        <td><%= link_to ' Editar ', edit_scr_cargo_path(scr_cargo), class:"btn btn-mini btn-info" %></td>
        <td><%= link_to ' Eliminar ', scr_cargo, method: :delete, data: { confirm: 'Confirma la operación?' }, class:"btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
   <tr>
    <th>Nombre de cargo</th>
    <th>Descripción</th>
    <th>Salario</th>
    <th colspan="3">Operaciones</th>
  </tr>
 </tfoot>
</table>
 </div>
 <br>
</div>
<%= link_to 'Nuevo cargo', new_scr_cargo_path, class:"btn btn-mini btn-inverse" %>
<%= render :partial => '/layouts/main/tablas' %>
