<div class="module">
 <div class="module-head">
  <h3>Permisos asignados</h3>
 </div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
      <th>Usuario</th>
      <th>Rol</th>
      <th>Eliminar</th>
    </tr>
  </thead>
  <tbody>
    <% @scr_usuario_rols.each do |scr_usuario_rol| %>
      <tr>
        <td>
         <% c = ScrUsuario.find(scr_usuario_rol.usuario_id) %>
         <%= c.nombreusuario %> <%= c.apellidousuario %>
        </td>
        <td>
         <% c = ScrRol.find(scr_usuario_rol.rol_id) %>
         <%= c.nombrerol  %>
        </td>
        <td><%= link_to 'Eliminar', scr_usuario_rol, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Usuario</th>
      <th>Rol</th>
      <th>Eliminar</th>
    </tr>
  </tfoot>
</table>
<%= render :partial => '/layouts/main/tablas' %>
