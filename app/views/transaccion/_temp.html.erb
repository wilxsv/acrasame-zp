<div class="module">
 <div class="module-head"><h3>Transacción a procesar</h3></div>
 <div class="module-body">
<%= form_for :transacx, :url => { :action => :create } do |f| %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Cuenta</th>
      <th>Nombre</th>
      <th>Debe</th>
      <th>Haber</th>
    </tr>
  </thead>
  <tbody>
   <% if session['html'] %>
    <%= session['html'].html_safe || "" %>
   <tr><td colspan="2"></td><td><b> <p align="right"><%= session['debe'] %></p></b></td><td><b><p align="right"><%= session['haber'] %></p></b></td></tr>
   <tr><td>Fecha</td><td colspan="3"><%= session['fecha'] %></td></tr>
   <tr><td>Comentario</td><td colspan="3"><%= f.text_field :comentario %></td></tr>
   <% end %>
  </tbody>
</table>

  <%= f.submit "Finalizar transacción", class: "btn-success btn-mini" %>
<% end %>
 </div>
</div>
