<div class="module">
 <div class="module-head"><h3>Categoria de Representate legal</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
  <thead>
    <tr>
      <th>Nombre de categoria</th>
      <th>Descripcion</th>
      <th>Firma informe</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </thead>

  <tbody>
    <% @scr_cat_rep_legals.each do |scr_cat_rep_legal| %>
      <tr>
        <td><%= scr_cat_rep_legal.catRLegalNombre %></td>
        <td><%= scr_cat_rep_legal.catRLegalDescripcion %></td>
        <td><%= scr_cat_rep_legal.catRLegalFirma %></td>
        <td><%= link_to 'Ver', scr_cat_rep_legal %></td>
        <td><%= link_to 'Editar', edit_scr_cat_rep_legal_path(scr_cat_rep_legal) %></td>
        <td><%= link_to 'Eliminar', scr_cat_rep_legal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Nombre de categoria</th>
      <th>Descripcion</th>
      <th>Firma informe</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </tfoot>
</table>

<%= render :partial => '/layouts/main/tablas' %>
<br>
<%= link_to 'Nueva categoria de Representante Legal', new_scr_cat_rep_legal_path, class:"btn btn-inverse" %>
