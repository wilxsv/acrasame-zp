<div class="module">
 <div class="module-head">
  <h3>Cuentas donde se aplicara el cobro automatico en la generación de recibos</h3>
 </div>
 <div class="module-body">
  <%= form_for :transacx, class:"form-horizontal row-fluid", :url => { :action => :configure } do |f| %>
   <div class="control-group">
    <%= f.label :cuenta_debe %>
    <div class="controls">
     <div class="input-append">
      <%= f.select :cdebe, ScrCuentua.order('CAST("cuentaCodigo" AS TEXT)').all.collect { |p| [ p.cuentaCodigo.to_s+"-"+p.cuentaNombre, p.id ] }, include_blank: false %>
     </div>
    </div>
   </div>
   <div class="control-group">
    <%= f.label :cuenta_haber %>
    <div class="controls">
     <div class="input-append">
      <%= f.select :chaber, ScrCuentua.order('CAST("cuentaCodigo" AS TEXT)').all.collect { |p| [ p.cuentaCodigo.to_s+"-"+p.cuentaNombre, p.id ] }, include_blank: false %>
     </div>
    </div>
   </div>
   <%= f.submit "Automatizar cobros", class:"btn btn-mini btn-primary", data: { confirm: 'Confirma la operación ?' } %>
  <% end %>
 </div>
</div>
<br />
