<div class="module">
 <div class="module-head"><h3>Categoria de cobros</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </thead>

  <tbody>
    <% @scr_cat_cobros.each do |scr_cat_cobro| %>
      <tr>
        <td><%= scr_cat_cobro.cCobroNombre %></td>
        <td><%= scr_cat_cobro.cCobroDescripcion %></td>
        <td><%= link_to 'Ver', scr_cat_cobro %></td>
        <td><%= link_to 'Editar', edit_scr_cat_cobro_path(scr_cat_cobro) %></td>
        <td><%= link_to 'Eliminar', scr_cat_cobro, method: :delete, data: { confirm: 'Confirma la operacion?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3">Operaciones</th>
    </tr>
  </tfoot>
</table>
<%= render :partial => '/layouts/main/tablas' %>
<br>
<%= link_to 'Nueva categoria de cobro', new_scr_cat_cobro_path, class:"btn btn-inverse" %>
