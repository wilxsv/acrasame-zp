<div class="module">
 <div class="module-head"><h3>Areas de trabajo</h3></div>
 <div class="module-body table">
  <table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">
   <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @scr_area_trabajos.each do |scr_area_trabajo| %>
      <tr>
        <td><%= scr_area_trabajo.aTrabajoNombre %></td>
        <td><%= scr_area_trabajo.aTrabajoDescripcion %></td>
        <td><%= link_to 'ver', scr_area_trabajo %></td>
        <td><%= link_to 'Editar', edit_scr_area_trabajo_path(scr_area_trabajo) %></td>
        <td><%= link_to 'Eliminar', scr_area_trabajo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
   <tfoot>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </tfoot>
</table>
<%= render :partial => '/layouts/main/tablas' %>
<br>
<%= link_to 'Nueva area',  new_scr_area_trabajo_path , class:"btn btn-mini btn-inverse" %>
