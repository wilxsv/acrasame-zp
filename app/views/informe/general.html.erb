<div class="module">
 <div class="module-head"><h3>Categoria de Representate legal</h3></div>
 <div class="module-body table">
  <!-- Total de activos -->
  <!--<table cellpadding="0" cellspacing="0" border="0" class="datatable-2 table table-bordered table-striped	 display" width="100%">--> 
  <table cellpadding="0" cellspacing="0" border="0" display" width="100%">
  <thead>
    <tr>
      <th>Cuenta</th>
      <th>Nombre</th>
      <th>Saldo</th>
    </tr>
  </thead>
  <tbody>
   <!-- inicio de secuencias -->
   <% saldo = 0 %>
   <% cuenta = "" %>
   <% id = 0 %>
   <% saldo_a = 0 %>
   <% saldo_p= 0 %>
   <% saldo_c = 0 %>
   <% @ScrTodo.each do |t| %>
    <% if id != t.cuentaCodigo && t.cuentaCodigo < 4 %>
     <% if id != 0 %>
      <td></td>
      <td><b>TOTAL DE <%= cuenta %></b></td>
      <% if saldo >= 0 %>
       <td><b><%= saldo %></b></td>
      <% else %>
       <td><b>(<%= saldo.abs %>)</b></td>
      <% end %>
     <% end %>
     <% id = t.cuentaCodigo %>
     <% saldo = 0 %>
     <% cuenta = t.cuentaNombre %>
    <% else %>
     <% saldo = saldo + t.cuentaDebe - t.cuentaHaber %>
    <% end %>
    <tr>
     <% number = t.cuentaCodigo.to_s %>
     <% number = number.initial %>
     <% case number.to_i
         when 1
          saldo_a += t.cuentaDebe - t.cuentaHaber
         when 2
          saldo_p += t.cuentaDebe - t.cuentaHaber
         when 3
          saldo_c += t.cuentaDebe - t.cuentaHaber
         else
        end
     %>
     <% if number.to_i > 3 %>
     <% elsif t.cuentaCodigo < 4 %>
      <td><b><%= t.cuentaCodigo %></b></td>
      <td><b><%= t.cuentaNombre %></b></td>
      <td></td>
     <% elsif t.cuentaCodigo < 100 %>
      <td><b><%= t.cuentaCodigo %></b></td>
      <td><b><%= t.cuentaNombre %></b></td>
      <% if t.cuentaDebe - t.cuentaHaber >= 0 %>
       <td><b><%= t.cuentaDebe - t.cuentaHaber %></b></td>
      <% else %>
       <td><b>(<%= t.cuentaHaber - t.cuentaDebe %>)</b></td>
      <% end %>
     <% else %>
      <td><%= t.cuentaCodigo %></td>
      <td><%= t.cuentaNombre %></td>
      <% if t.cuentaDebe - t.cuentaHaber >= 0 %>
       <td><%= t.cuentaDebe - t.cuentaHaber %></td>
      <% else %>
       <td>(<%= t.cuentaHaber - t.cuentaDebe %>)</td>
      <% end %>
     <% end %>
    </tr>
   <% end %>
   <!-- fin secuencias -->
  </tbody>
  <tfoot>
    <tr>
      <th>Cuenta</th>
      <th>Nombre</th>
      <th>Saldo</th>
    </tr>
    <tr>
      <th></th>
      <th>Activo = Pasivo + Capital ~ <%= saldo_a %> = <%= saldo_p %> + <%= saldo_c %></th>
      <th></th>
    </tr>
  </tfoot>
</table>
<% if (saldo_a == saldo_p + saldo_c) %>
 <div class="alert alert-success">
  <strong>Felicitaciones!</strong> El ejercicio se cumplio, puede revisar el estado de resultados
 </div>
<% else %>
 <div class="alert alert-error">
  <strong>Advertencia!</strong> No se puede realizar el cierre contable ya que no se cumple con este informe
 </div>
<% end %>
<%= render :partial => '/layouts/main/tablas' %>
